@model ProductSearchViewModel
@{
    ViewBag.Title = "ProductTable";
}

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">
<script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<div>
    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label>Search</label>
                    <input class="form-control" id="searchTxt" name="Search" value="@Model.SearchTerm" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Action</label>
                    <div class="row">
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="searchBtn">Search</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="resetBtn">Reset</button>
                        </div>
                        <div class="col-md-4 pr-0">
                            <button class="btn btn-primary form-control" type="button" id="newBtn">New</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <table id="ProductsTable" class="table table-striped">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td class="wrap-td">Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Products != null && Model.Products.Count > 0)
            {

                foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>
                            @if (product.Category != null)
                            {
                                <text>@product.Category.Name</text>
                            }
                            else
                            {
                                <text>-</text>
                            }

                        </td>
                        <td>@product.Price</td>
                        <td class="wrap-td">
                            <button class="editBtn" data-id="@product.ID">Edit</button>
                            <button class="deleteBtn" data-id="@product.ID">Delete</button>
                            <button class="addtoCart" data-id="@product.ID">Add To Cart</button>
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td class="text-danger" colspan="4">No Products found.</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @*@if (Model.PageNo!=1)
        {

        <button class="pageButtons" id="PreviousRecords" data-pageNo="@(Model.PageNo - 1)">Previous</button>
        }
        <button class="pageButtons" id="NextRecords" data-pageNo="@(Model.PageNo + 1)">Next</button>*@
    </div>
</div>
<script>
    $('#ProductsTable').DataTable();
    //上一頁
    $(".pageButtons").click(function () {

        $.ajax({
            //預設Get
            url: '/Product/ProductTable',
            data: {
                pageNo : $(this).attr("data-pageNo")
            }
        }).done(function (response) {
            $("#tableContiner").html(response);

        }).fail(function (XMLHttpRequest, textStatus, errThrown) {
            alert("fail");
        });
    });
    
    //搜尋
    $("#searchBtn").click(function () {
        var searchValue = $("#searchTxt").val();
        $.ajax({
            //預設Get
            url: '/Product/ProductTable',
            data: {
                search: searchValue
            }
        }).done(function (response) {
            $("#tableContiner").html(response);
        }).fail(function (XMLHttpRequest, textStatus, errThrown) {
            alert("fail");
        });
    });

    //搜尋(重置)
    $("#resetBtn").click(function () {
        var searchValue = '';
        $.ajax({
            //預設Get
            url: '/Product/ProductTable',
            data: {
                search: searchValue
            }
        }).done(function (response) {
            $("#tableContiner").html(response);
        }).fail(function (XMLHttpRequest, textStatus, errThrown) {
            alert("fail");
        });
    });

    //新增(帶入Template)
    $("#newBtn").click(function () {

        $.ajax({
            //預設Get
            url: '/Product/Create',
        }).done(function (response) {
            $("#actionContainer").html(response);
            focusAction();

        }).fail(function (XMLHttpRequest, textStatus, errThrown) {
            alert("fail");
        });
    });
    //編輯(帶入Template)
    $(".editBtn").click(function () {

        $.ajax({
            //預設Get
            url: '/Product/Edit',
            data: {
                ID: $(this).attr('data-id')
            }
        }).done(function (response) {
            $("#actionContainer").html(response);
            focusAction();
        }).fail(function (XMLHttpRequest, textStatus, errThrown) {
            alert("fail");
        });
    });
    //編輯
    $(".deleteBtn").click(function () {

        swal({
            title: "確定要刪除嗎?",
            text: "您確定要刪除這個產品嗎?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {

                if (willDelete) {
                    $.ajax({
                        type: 'POST',
                        url: '/Product/Delete',
                        data: {
                            ID: $(this).attr('data-id')
                        }
                    }).done(function (response) {

                        $("#tableContiner").html(response);
                        swal("刪除成功!", {
                            icon: "success",
                        });
                    }).fail(function (XMLHttpRequest, textStatus, errThrown) {
                        alert("fail");
                    });

                }
            });
    });
    var products = [];
    //加到購物車(帶入Template)
    $(".addtoCart").click(function () {
        var productID = $(this).attr('data-id');
        products.push(productID);
        $.cookie('CartProducts', products.join('-'), { path: '/' });
        alert('加入購物車');
    });

    function focusAction() {
        $('html, body').animate({
            scrollTop: $("#actionContainer").offset().top - 100
        }, 1000);
    }
</script>


